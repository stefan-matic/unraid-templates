<?xml version="1.0"?>
<Container version="2">
  <Name>scanopy-daemon</Name>
  <Repository>ghcr.io/scanopy/scanopy/daemon:latest</Repository>
  <Registry>https://github.com/scanopy/scanopy/pkgs/container/scanopy%2Fdaemon</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>true</Privileged>
  <Support>https://forums.unraid.net/topic/194592-support-scanopy-automatically-discover-and-visually-document-network-topology-ex-netvisor/</Support>
  <Shell>bash</Shell>
  <Project>https://github.com/scanopy/scanopy</Project>
  <License>https://github.com/scanopy/scanopy/blob/main/LICENSE.md</License>
  <Overview>Automatically discover and visually document network topology.</Overview>
  <Category>Network:Management Network:Other</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/stefan-matic/unraid-templates/main/templates/netvisor-daemon.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/scanopy/scanopy/refs/heads/main/media/logo.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <DonateText>Please head over to https://buymeacoffee.com/mayanayza for donations.</DonateText>
  <DonateLink>https://buymeacoffee.com/mayanayza</DonateLink>
  <Date>2025-10-29</Date>
  <Changes></Changes>
  <Requires/>
  <Config Name="Config" Target="/root/.config/daemon" Default="" Mode="rw" Description="" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/scanopy/daemon</Config>
  <Config Name="Docker access" Target="/var/run/docker.sock" Default="" Mode="ro" Description="" Type="Path" Display="always" Required="false" Mask="false">/var/run/docker.sock</Config>
  <Config Name="Server URL" Target="SCANOPY_SERVER_URL" Default="" Mode="" Description="Or use a domain name if behind reverse proxy" Type="Variable" Display="always" Required="false" Mask="false">http://YOUR_SCANOPY_SERVER_IP:60072</Config>
  <Config Name="Mode" Target="SCANOPY_MODE" Default="" Mode="" Description="Pull: daemon polls server.&#13;&#10;Push: server initiates scans (daemon must be reachable)" Type="Variable" Display="always" Required="false" Mask="false">Push</Config>
  <Config Name="API Key" Target="SCANOPY_DAEMON_API_KEY" Default="" Mode="" Description="Get from scanopy-server > Daemons > Create Daemon > Generate > SCANOPY_DAEMON_API_KEY" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Network ID" Target="SCANOPY_NETWORK_ID" Default="" Mode="" Description="UUID of the network to scan. Get from scanopy-server > Daemons > Create Daemon > Generate > SCANOPY_NETWORK_ID" Type="Variable" Display="always" Required="true" Mask="false">1881e7fa-b4b4-4227-be49-265c98f87b88</Config>
  <Config Name="Daemon URL" Target="SCANOPY_DAEMON_URL" Default="" Mode="" Description="Public URL where server can reach daemon (Push mode only)" Type="Variable" Display="always" Required="false" Mask="false">http://10.100.20.250:60073</Config>
  <Config Name="Daemon Port" Target="SCANOPY_DAEMON_PORT" Default="" Mode="" Description="Port for daemon to listen on" Type="Variable" Display="always" Required="false" Mask="false">60073</Config>
  <Config Name="Bind Address" Target="SCANOPY_BIND_ADDRESS" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">0.0.0.0</Config>
  <Config Name="Daemon Name" Target="SCANOPY_NAME" Default="" Mode="" Description="Name displayed under scanopy-server > Daemons" Type="Variable" Display="always" Required="false" Mask="false">UNRAID</Config>
  <Config Name="Log Level" Target="SCANOPY_LOG_LEVEL" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">info</Config>
  <Config Name="Concurrent Scans" Target="SCANOPY_CONCURRENT_SCANS" Default="" Mode="" Description="Maximum parallel host scans" Type="Variable" Display="always" Required="false" Mask="false">15</Config>
  <Config Name="Heartbeat Interval" Target="SCANOPY_HEARTBEAT_INTERVAL" Default="" Mode="" Description="Seconds between heartbeats/work requests" Type="Variable" Display="always" Required="false" Mask="false">30</Config>
  <TailscaleStateDir/>
</Container>
