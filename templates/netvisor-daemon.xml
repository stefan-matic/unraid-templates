<?xml version="1.0"?>
<Container version="2">
  <Name>scanopy-daemon</Name>
  <Repository>ghcr.io/scanopy/scanopy/daemon:latest</Repository>
  <Registry>https://github.com/scanopy/scanopy/pkgs/container/scanopy%2Fdaemon</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>true</Privileged>
  <Support>https://forums.unraid.net/topic/194592-support-scanopy-automatically-discover-and-visually-document-network-topology-ex-netvisor/</Support>
  <Shell>bash</Shell>
  <Project>https://github.com/scanopy/scanopy</Project>
  <License>https://github.com/scanopy/scanopy/blob/main/LICENSE.md</License>
  <Overview>Automatically discover and visually document network topology.</Overview>
  <Category>Network:Management Network:Other</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/stefan-matic/unraid-templates/main/templates/netvisor-daemon.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/scanopy/scanopy/refs/heads/main/media/logo.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <DonateText>Please head over to https://buymeacoffee.com/mayanayza for donations.</DonateText>
  <DonateLink>https://buymeacoffee.com/mayanayza</DonateLink>
  <Date>2025-10-29</Date>
  <Changes></Changes>
  <Requires/>
  <Config Name="SCANOPY_SERVER_TARGET" Target="SCANOPY_SERVER_TARGET" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false">http://</Config>
  <Config Name="SCANOPY_SERVER_PORT" Target="SCANOPY_SERVER_PORT" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">60072</Config>
  <Config Name="SCANOPY_DAEMON_PORT" Target="SCANOPY_DAEMON_PORT" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">60073</Config>
  <Config Name="SCANOPY_BIND_ADDRESS" Target="SCANOPY_BIND_ADDRESS" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">0.0.0.0</Config>
  <Config Name="SCANOPY_LOG_LEVEL" Target="SCANOPY_LOG_LEVEL" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">info</Config>
  <Config Name="SCANOPY_HEARTBEAT_INTERVAL" Target="SCANOPY_HEARTBEAT_INTERVAL" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">30</Config>
  <Config Name="Docker access" Target="/var/run/docker.sock" Default="" Mode="ro" Description="" Type="Path" Display="always" Required="true" Mask="false">/var/run/docker.sock</Config>
  <Config Name="SCANOPY_NAME" Target="SCANOPY_NAME" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">UNRAID</Config>
  <Config Name="SCANOPY_CONCURRENT_SCANS" Target="SCANOPY_CONCURRENT_SCANS" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">15</Config>
  <Config Name="SCANOPY_NETWORK_ID" Target="SCANOPY_NETWORK_ID" Default="" Mode="" Description="Get from scanopy-server > Daemons > Create Daemon > Generate > SCANOPY_NETWORK_ID" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="SCANOPY_DAEMON_API_KEY" Target="SCANOPY_DAEMON_API_KEY" Default="" Mode="" Description="Get from scanopy-server > Daemons > Create Daemon > Generate > SCANOPY_DAEMON_API_KEY" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <TailscaleStateDir/>
</Container>
